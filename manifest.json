{
    "name": "OldTweetDeck",
    "description": "Returns old TweetDeck!",
    "version": "4.3.9",
    "manifest_version": 3,
    "default_locale": "en",
    "homepage_url": "https://github.com/dimdenGD/OldTweetDeck",
    "permissions": [
        "webNavigation",
        "cookies",
        "declarativeNetRequest",
        "storage",
        "contextMenus",
        "notifications"
    ],
    "background": {
        "service_worker": "src/background_mv3.js"
    },
    "host_permissions": [
        "https://twitter.com/*",
        "https://*.twitter.com/*",
        "https://x.com/*",
        "https://*.x.com/*",
        "https://abs.twimg.com/*",
        "https://api.twitter.com/*",
        "https://tweetdeck.com/",
        "https://oldtd.org/*",
        "https://*.tenor.com/*",
        "https://*.giphy.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*",
                "files/*",
                "src/*",
                "solver.html",
                "manifest.json",
                "src/btd/*",
                "src/btd/assets/icons/*",
                "src/btd/options/*"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "declarative_net_request": {
        "rule_resources" : [{
          "id": "ruleset",
          "enabled": true,
          "path": "ruleset.json"
        }]
      },
    "icons": {
        "16": "/images/logo16.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "options_page": "src/btd/options/ui.html",
    "content_scripts": [
        {
            "matches": ["https://twitter.com/i/tweetdeck", "https://x.com/i/tweetdeck", "https://x.com/i/tweetdeck?*"],
            "js": ["src/content.js"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["https://twitter.com/i/tweetdeck", "https://x.com/i/tweetdeck", "https://x.com/i/tweetdeck?*"],
            "js": ["src/destroyer.js", "src/notifications.js", "src/injection.js"],
            "all_frames": true,
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": [
                "*://tweetdeck.twitter.com/*",
                "*://tweetdeck.dimden.dev/*",
                "https://twitter.com/i/tweetdeck",
                "https://x.com/i/tweetdeck"
            ],
            "js": ["src/btd/content.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}
